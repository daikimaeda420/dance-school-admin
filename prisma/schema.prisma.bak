// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl は一旦削除（必要になったら戻す）
}

model Faq {
  id        String   @id @default(uuid())
  schoolId  String   @unique
  items     Json
  updatedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
