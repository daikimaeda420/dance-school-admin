{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // ← 修正ここ
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/app/api/schools/route.tsx",
    ".next/types/app/schools/[id]/faq/page.tsx",
    ".next/types/app/schools/manage/page.tsx",
    ".next/types/app/api/faq/route.tsx",
    ".next/types/app/api/check-admin/route.tsx",
    ".next/types/app/api/auth/[...nextauth]/route.tsx",
    ".next/types/app/page.tsx",
    ".next/types/app/layout.tsx",
    "app/schools/manage/page.tsx"
  ],
  "exclude": ["node_modules"]
}
